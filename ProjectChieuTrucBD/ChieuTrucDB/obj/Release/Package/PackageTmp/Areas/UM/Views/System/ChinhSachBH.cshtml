@model ChieuTrucDB.Models.ChinhSachBH
@{
    ViewBag.Title = "Cập nhật chính sách bảo hành";
    Layout = "~/Areas/UM/Views/Shared/_Layout.cshtml";
}
@section title_header{
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-car icon-gradient bg-mean-fruit">
                </i>
            </div>
            <div>
                @ViewBag.Title
            </div>
        </div>
        <div class="page-title-actions">
            <div class="d-inline-block dropdown">
                <button type="button" class="btn-shadow btn btn-info" onclick="EditChinhSachBH()">
                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa fa-plus-circle"></i>
                    </span>
                    Chỉnh sửa
                </button>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Title</h5>
                <div class="table-responsive">
                    @if (Model != null)
                    {
                        @Html.Raw(Model.ChiTiet)
                    }
                    else
                    {
                        @Html.Raw("Hiện tại chưa có thông tin")
                    }
                    @*<table id="tableData" class="mb-0 table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Loại</th>
                                <th>Chi tiết</th>
                                <th>Ngày cập nhật</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>*@
                </div>
            </div>
        </div>
    </div>
</div>

@section _script
    {
    <script src="~/Assets/Admin/plugin/ckfinder/ckfinder.js"></script>
    <script src="~/Assets/Admin/plugin/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/adminScript.js"></script>
    <script>
        $(document).ready(function () {

        });
    </script>
}
@section _modal
{
    <div class="modal fade bd-example-modal-lg" id="editModal" tabindex="-2" role="dialog" aria-labelledby="myLargeModalLabel2" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa chính sách bảo hành</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="IdChinhSachBH" />
                    <div class="form-group col-sm-12">
                        <label class="">Nội dung</label>
                        <textarea class="col-sm-12 form-control ckeditor" id="Edit_ChiTiet" name="Edit_ChiTiet"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="UpdateChinhSachBaoHanh()">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>
}