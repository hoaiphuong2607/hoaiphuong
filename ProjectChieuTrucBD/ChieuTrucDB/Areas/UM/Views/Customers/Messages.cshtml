                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa fa-plus-circle"></i>
                    </span>
                    Thêm thông tin mới
                </button>
            </div>
        </div>*@
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Title</h5>
                <div class="table-responsive">
                    <table id="tableData" class="mb-0 table table-hover table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên</th>
                                <th>Email</th>
                                <th>Tiêu đề</th>
                                <th>Nội dung</th>
                                <th>Ngày gửi</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section _script
    {
    <script src="~/Assets/Admin/plugin/ckfinder/ckfinder.js"></script>
    <script src="~/Assets/Admin/plugin/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/adminScript.js"></script>
    <script>
        $(document).ready(function () {
            GetAllContacts();
        });
    </script>
}
@section _modal
{
    <div class="modal fade bd-example-modal-lg" id="viewModal" tabindex="-2" role="dialog" aria-labelledby="myLargeModalLabel2" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalTitle">Nội dung tin nhắn</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="IdContact" />
                    <div class="form-inline">
                        <div class="form-group col-sm-4">
                            <label class="">Khách hàng</label>
                            <input type="text" id="Name" readonly class="form-control col-sm-12" />
                        </div>
                        <div class="form-group col-sm-4">
                            <label class="">Địa chỉ email</label>
                            <input type="text" id="Email" readonly class="form-control col-sm-12" />
                        </div>
                        <div class="form-group col-sm-4">
                            <label class="">Ngày gửi</label>
                            <input type="text" id="NgayGui" readonly class="form-control col-sm-12" />
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <label class="">Tiêu đề</label>
                        <input type="text" id="Subject" readonly class="form-control col-sm-12" />
                    </div>
                    <div class="form-group col-sm-12">
                        <label class="">Lời nhắn</label>
                        <textarea id="Message" readonly class="form-control col-sm-12"></textarea>
                    </div>
                    <div class="form-group col-sm-12">
                        <label class="">Tiêu đề phản hồi</label>
                        <input type="text" id="SubjectReply" required placeholder="[BDMAT] Chiếu trúc Bình Dương - Phản hồi" class="form-control col-sm-12" />
                    </div>
                    <div class="form-group col-sm-12">
                        <label class="">Nội dung phản hồi</label>
                        <textarea id="MessageReply" class="form-control col-sm-12" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="ReplyContact()">Thêm mới</button>
                </div>
            </div>
        </div>
    </div>
}